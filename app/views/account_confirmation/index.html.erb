<% content_for(:head_extra) do %>
  <style type="text/css">
    @media only screen  and (max-width :639px) {
      #goat {
        width: 70px;
        height: auto;
      }
    }
  </style>
<% end -%>

<section class="inner-pages">

  <div class="credit-card">
    <div class="container">
      <div class="upload-photo">
        <div class="row">
          <div class="col-md-12 col-sm-12 col-xs-12">
            <h2 class="title">Great, your child is on their  <span>way to trading!</span></h2>
          </div>
          <div class="col-md-10 col-md-offset-1 col-sm-11 col-sm-offset-1 col-xs-12 col-xs-offset-0">
            <h2 class="moderate-dark-title-color">Please verify that you are an adult.</h2>
            <h4 class="moderate-dark-title-color" style="line-height: 1.3;" >
              We are dedicated to providing a safe and secure environment for our kids.
              Children&apos;s Online Privacy Protection Act (COPPA) recommends a small fee
              to a parent&apos;s credit card as a good method to ensure that you are
              the adult on file.
            </h4>
            <br/>
            <h4 class="text-center" style="color:rgb(61,50,50);">
              We will charge your credit card $1.00.
            </h4>
            <form action="/account/credit_card" method="get">
              <input class="button destop" name="button" type="submit" value="Verify" style="width: 70%; margin: 30px auto;"/>
              <input class="button mobile" name="button" type="submit" value="Verify" style="width: 60%; margin: 20px auto;"/>
            </form>

            <h4 class="moderate-dark-title-color" style="line-height: 1.3;" >
              Or, if you would rather, upload a photo of yourself
              holding a readable image of your Driver&apos;s License.
              <br/>
              <a href="/account/driver_license">Upload now</a>
            </h4>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
