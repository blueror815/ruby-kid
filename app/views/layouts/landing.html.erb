  if (/*@cc_on!@*/false) {document.documentElement.className+=' ie10';}
</script><!--<![endif]-->
  <!--[if IE]>
  <script type="text/javascript" src="/assets/landing/PIE.js"></script>
  <![endif]-->

  <%= yield :head_extra %>
</head>
<body>
<% if !params[:hide_navbar] -%>
<header class="header">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-sm-6 col-xs-6">
        <div id="logo-destop"><a href="/"><img src="/assets/landing/logo-desktop.png" alt=""/></a></div>
      </div>
      <div class="col-md-6 col-sm-6 col-xs-6">
          <% if user_signed_in? -%>
          <a href="<%= users_logout_path -%>" class="login">LOG OUT</a>
          <% elsif request.path != new_user_session_path -%>
          <a class="login" href="<%= new_user_session_path %>">LOGIN</a>
          <% else -%> &nbsp;
          <% end -%>
      </div>
    </div>
    <!--row-->
  </div>
  <!--container-->
</header>
<% end # if !params[:hide_navbar] -%>


<!--pageContent-->
  <%= yield %>

<% if !params[:hide_navbar] -%>
<!--contact-form-->

<%= render partial: 'layouts/landing_footer' -%>

<% end # if !params[:hide_navbar] -%>

<%= yield :footer_extra %>
</body>
</html>