  </div>
  <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-6">
    <%= f.text_field(:school_name, placeholder:'School', class:'form-control', required: true) %>
  </div>
  <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-6">
    <%= f.text_field(:city_state, placeholder:'City / State', class:'form-control', required: true) %>
  </div>
